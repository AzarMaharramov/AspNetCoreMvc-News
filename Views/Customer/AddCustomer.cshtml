@model MyFirstProject.Models.Customer

<script src="~/lib/jquery/jquery.min.js"></script>
<script src="~/lib/jquery-validate/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>


<div class="col-4 ms-3">
    <form asp-controller="Customer" asp-action="AddCustomer" method="post">

        <div class="mt-2">
            <a href="/Customer/CustomerList"> 
                <div class="btn btn-info mb-2 col-4"><i class="fa-solid fa-list"></i> Customer List </div>
            </a>
        </div>

        <div class="input-group mb-2">
            <input type="text" class="form-control" id="floatingInput" placeholder="Name" asp-for="Name" />
            <br />
            <div class="input-group mb-2">
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>
        </div>

        <div class="input-group mb-2">
            <input type="text" class="form-control" id="floatingInput" placeholder="Surname" asp-for="Surname" />
            <div class="input-group mb-2">
                <span class="text-danger" asp-validation-for="Surname"></span>
            </div>
        </div>
        
        <div class="input-group mb-2">
            <input type="email" class="form-control" id="floatingInput" placeholder="Email address" asp-for="Email" />
            <div class="input-group mb-2">
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>
        </div>

        <div class="input-group mb-2">
            <input type="number" class="form-control" id="floatingInput" placeholder="0xx xxx xx xx" asp-for="Mobile" />
            <div class="input-group mb-2">
                <span class="text-danger" asp-validation-for="Mobile"></span>
            </div>
        </div>
        
        <div class="col-12 mt-2">
            <button type="submit" class="btn btn-success mt-2 col-2">Send</button>
        </div>
        
    </form>
</div>