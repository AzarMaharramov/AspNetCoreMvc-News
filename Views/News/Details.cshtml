@model MyFirstProject.Models.News

<div class="container-fluid px-4 mt-5">
    <div class="row">
        <div class="col-md-4">
            <figure class="w-100">
                <img src="@Model.Image" class="img-fluid w-100" alt="News Image" />
            </figure>
        </div>
        <div class="col-md-8">
            <div class="row">
                <div class="col-md-12">
                    <h2 class="h4 mb-0">@Model.Title</h2>
                    <p class="text-muted">@Model.Date.ToShortDateString()</p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <p class="mt-3">@Model.Content</p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <a href="/Xeberler" class="btn btn-outline-secondary mt-3">Back to News</a> 
                </div>
            </div>
        </div>
    </div>
</div>
