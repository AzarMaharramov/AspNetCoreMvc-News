@{
    Layout = null;
}
@model MyFirstProject.Models.LoginViewModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Login - SB Admin</title>
    <link href="/css/styles.css" rel="stylesheet" />
    <script src="https://use.fontawesome.com/releases/v6.1.0/js/all.js" crossorigin="anonymous"></script>
</head>
<body class="bg-primary">
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-5">
                            <div class="card shadow-lg border-0 rounded-lg mt-5">
                                <div class="card-header"><h3 class="text-center font-weight-light my-4">Login</h3></div>
                                <div class="card-body">
                                    <form asp-action="Login" asp-controller="User" method="post">
                                        <div class="form-floating mb-3">
                                            <input class="form-control" id="input-username" type="text" 
                                                placeholder="Username" 
                                                asp-for="Username"
                                                value=@ViewBag.Username 
                                            />
                                            <label for="input-username">Username</label>
                                            <span class="text-danger" asp-validation-for="Username"></span>
                                        </div>
                                        <div class="form-floating">
                                            <input class="form-control" id="input-password" type="password" placeholder="Password" asp-for="Password"/>
                                            <label for="input-password">Password</label>
                                            <span class="text-danger" asp-validation-for="Password"></span>
                                        </div>
                                        <div class="mb-3">
                                            <span class="text-danger">@ViewBag.message</span>
                                        </div>
                                        <div class="form-check mb-3">
                                            <input class="form-check-input" id="check-remember" type="checkbox" asp-for="RememberMe" />
                                            <label class="form-check-label" for="check-remember">Remember Me</label> 
                                        </div>
                                        <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                                            <a class="small" href="/User/ResetPassword">Forgot Password?</a>
                                            <button type="submit" class="btn btn-primary"> Login </button>
                                        </div>
                                    </form>
                                </div>
                                <div class="card-footer text-center py-3">
                                    <div class="small"><a href="/User/CreateUser">Need an account? Sign up!</a></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
        @Html.Partial("_PartialFooter")
        
    </div>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="/js/scripts.js"></script>
</body>
</html>